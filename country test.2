import java.util.Scanner;

public class CountriesListApp {

    public static void main(String[] args) {
        CountriesList countriesList = new CountriesList();
        Scanner scanner = new Scanner(System.in);
        
        System.out.println("Welcome to the Countries List App!");
        
        boolean exit = false;
        
        while (!exit) {
            System.out.println("\nMenu:");
            System.out.println("1. Display countries");
            System.out.println("2. Add a country");
            System.out.println("3. Exit");
            System.out.print("Enter your choice: ");
            
            int choice = scanner.nextInt();
            scanner.nextLine();

            switch (choice) {
                case 1:
                    if (countriesList.isEmpty()) {
                        System.out.println("The list is empty.");
                    } else {
                        System.out.println("Countries List:");
                        countriesList.displayCountries();
                    }
                    break;
                
                case 2:
                    System.out.print("Enter the name of the country: ");
                    String country = scanner.nextLine().trim();
                    if (countriesList.containsCountry(country)) {
                        System.out.println("Country already exists in the list.");
                    } else {
                        countriesList.addCountry(country);
                        System.out.println("Country added successfully!");
                    }
                    break;
                
                case 3:
                    System.out.println("Exiting the program. Goodbye!");
                    exit = true;
                    break;
                
                default:
                    System.out.println("Invalid choice. Please try again.");
            }
        }
        
        scanner.close();
    }
}
